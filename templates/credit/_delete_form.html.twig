<form method="post" action="{{ path('credit_delete', {'id': credit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ credit.id) }}">
    <button class="btn success rounded-pill">Supprimer</button>
</form>
