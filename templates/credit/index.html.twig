{% extends 'base.html.twig' %}

{% block title %}Credit index{% endblock %}

{% block body %}
    <h1>Credit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Mensualites</th>
                <th>NombresMensualites</th>
                <th>MontantEmprunte</th>
                <th>TauxFixe</th>
                <th>MontantTotal</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for credit in credits %}
            <tr>
                <td>{{ credit.id }}</td>
                <td>{{ credit.creditCategory.titre }}</td>
                <td>{{ credit.mensualites }}</td>
                <td>{{ credit.nombresMensualites }}</td>
                <td>{{ credit.montantEmprunte }}</td>
                <td>{{ credit.tauxFixe }}</td>
                <td>{{ credit.montantTotal }}</td>
                <td>{{ credit.imageName }}</td>
                <td>{{ credit.updatedAt ? credit.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('credit_show', {'id': credit.id}) }}">show</a>
                    <a href="{{ path('credit_edit', {'id': credit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('credit_new') }}">Create new</a>
{% endblock %}
