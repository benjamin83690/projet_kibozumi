{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-7">
        <div class="row">
            
                <h4>Liste des utilisateurs</h4>
            <table class="table table-striped">
                <thead class="bg-success">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
                <td>
                    <button class='btn btn-info' href="{{ path('user_show', {'id': user.id}) }}">show</button>
                    <button class='btn btn-warning' href="{{ path('user_edit', {'id': user.id}) }}">edit</button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>


    <button class='btn btn-success' href="{{ path('user_new') }}">Cr√©er un nouvel utilisateur</button>
{% endblock %}
